@model AsociatieProprietari.Models.SituationViewModels
@{
    ViewBag.Title = "Situation";
}

<h2>Situation</h2>

<hr />

<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-6">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Invoice</th>
                        <th>Date</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Invoices)
                    {
                        <tr>
                            <td class="filterable-cell">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="filterable-cell">@Html.DisplayFor(modelItem => item.InvoiceDate)</td>
                            <td class="filterable-cell">@Html.DisplayFor(modelItem => item.Value) </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Payment</th>
                        <th>Date</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Payments)
                    {
                        <tr>
                            <td class="filterable-cell">@Html.DisplayFor(modelItem => item.Id)</td>
                            <td class="filterable-cell">@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                            <td class="filterable-cell">@Html.DisplayFor(modelItem => item.Value) </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <b><p style="font-size:x-large">Total Debt: @Html.DisplayFor(Model => Model.TotalDebt)</p></b>
    <b><p style="font-size:x-large">Total Paid: @Html.DisplayFor(Model => Model.TotalPayments)</p></b>
    <hr />
    <div><b><p style="font-size:x-large">Total Remeining: @Html.DisplayFor(Model => Model.TotalRemaining)</p></b></div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
